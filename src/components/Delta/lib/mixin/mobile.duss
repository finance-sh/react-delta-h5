
@define-mixin setTapColor $color {
    -webkit-tap-highlight-color: $(color);
}

@define-mixin noSelect {
    user-select: none;
}

@define-mixin setFull {
    height: 100%;
    width: 100%;
    overflow: hidden;
}

@define-mixin setShade {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 1;
}